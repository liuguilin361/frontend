{
  "name": "@sjsf/daisyui5-theme",
  "version": "2.1.1",
  "description": "The daisyUI v5 based theme for svelte-jsonschema-form",
  "license": "MIT",
  "keywords": [
    "theme",
    "daisyUI",
    "form"
  ],
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "publishConfig": {
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x0k/svelte-jsonschema-form.git",
    "directory": "packages/daisyui5-theme"
  },
  "bugs": "https://github.com/x0k/svelte-jsonschema-form/issues",
  "homepage": "https://x0k.github.io/svelte-jsonschema-form/",
  "exports": {
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "svelte": "./dist/components/*"
    },
    "./widgets/*": {
      "types": "./dist/widgets/*.d.ts",
      "svelte": "./dist/widgets/*"
    },
    "./extra-widgets/*": {
      "types": "./dist/extra-widgets/*.d.ts",
      "svelte": "./dist/extra-widgets/*"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./specs": {
      "types": "./dist/specs.d.ts",
      "svelte": "./dist/specs.js"
    }
  },
  "dependencies": {
    "@sjsf/basic-theme": "^2.1.1"
  },
  "peerDependencies": {
    "@sjsf/form": "^2.1.1",
    "daisyui": "^5.0.0",
    "svelte": "^5.33.0"
  },
  "optionalDependencies": {
    "cally": "^0.8.0",
    "pikaday": "^1.8.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@types/pikaday": "^1.7.9",
    "ajv": "~8.17.1",
    "cally": "~0.8.0",
    "daisyui": "~5.0.43",
    "globals": "^16.2.0",
    "pikaday": "~1.8.2",
    "svelte": "~5.34.7",
    "tailwindcss": "^4.1.10",
    "@sjsf/ajv8-validator": "2.1.1",
    "@sjsf/form": "2.1.1",
    "testing": "1.0.4"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-package && vite build && mv $(find .svelte-kit/output/client/_app/immutable/assets/ -name \"_page*.css\" | head -n 1) dist/styles.css && publint",
    "preview": "vite preview",
    "test": "npm run test:unit -- --run",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  }
}